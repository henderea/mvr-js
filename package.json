{
  "name": "@henderea/mvr",
  "version": "1.1.3",
  "description": "A regex-rename script",
  "main": "index.js",
  "repository": "git@github.com:henderea/mvr-js.git",
  "author": "Eric Henderson <henderea@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@henderea/arg-helper": "^1.2.4",
    "@henderea/regex-util": "^1.2.8",
    "@henderea/simple-colors": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vercel/ncc": "^0.38.0",
    "arg": "^5.0.2",
    "eslint": "^8.50.0",
    "eslint-config-henderea": "1.1.16",
    "eslint-plugin-import": "^2.28.1",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "ncc:build": "yarn ncc:build:release",
    "ncc:clean": "rm -rf dist",
    "ncc:post-clean": "rm -rf dist/*.hbs && rm -rf dist/locales",
    "ncc:build:release:build": "ncc build src/index.mjs -m -q -o dist",
    "ncc:build:debug:build": "ncc build src/index.mjs -q -o dist",
    "ncc:build:release": "yarn ncc:clean && yarn ncc:build:release:build && yarn ncc:post-clean",
    "ncc:build:debug": "yarn ncc:clean && yarn ncc:build:debug:build && yarn ncc:post-clean",
    "prepublishOnly": "yarn ncc:build",
    "lint": "eslint --ext .js,.mjs src lib",
    "lint:fix": "eslint --ext .js,.mjs --fix src lib"
  },
  "bin": {
    "mvr": "dist/index.mjs"
  },
  "files": [
    "dist/**/*"
  ],
  "eslintConfig": {
    "extends": "henderea"
  }
}
